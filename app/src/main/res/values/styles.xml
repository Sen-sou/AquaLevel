<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AquaTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryDark">@color/teal_200</item>
        <item name="colorAccent">@color/white</item>

        <!--this item is invoked in app theme to override the contained material button-->
        <item name="materialButtonStyle">@style/aqua.IconButton</item>
    </style>
    <!--Base application theme ends here-->

    <style name="aqua.IconButton" parent="Widget.Material3.Button.IconButton">
        <item name="android:padding">2dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text</item>

    </style>

</resources>