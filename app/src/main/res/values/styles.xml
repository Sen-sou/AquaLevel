<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AquaTheme.dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryDark">@color/teal_200</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:navigationBarColor">@color/toolbar</item>

        <item name="materialButtonStyle">@style/aqua.IconButton</item>
        <item name="android:popupBackground">@drawable/aqua_popup_background</item>

    </style>

    <style name="AquaTheme.popup" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@drawable/aqua_popup_background</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.AquaLevel.dialog" parent="MaterialAlertDialog.Material3">
        <item name="materialAlertDialogTitleTextStyle">@style/Theme.AquaLevel.dialog.title.text</item>
    </style>

    <style name="Theme.AquaLevel.dialog.title.text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="aqua.IconButton" parent="Widget.Material3.Button.IconButton">
        <item name="android:padding">2dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="aqua.rangeSlider" parent="Widget.Material3.Slider">
        <item name="trackColorInactive">@color/text</item>
        <item name="trackColorActive">@color/teal_700</item>
        <item name="tickColorActive">@color/teal_700</item>
        <item name="tickColorInactive">@color/teal_700</item>
        <item name="android:stepSize">1</item>
        <item name="labelStyle">@style/aqua.rangeSlider.label</item>
    </style>

    <style name="aqua.rangeSlider.label" parent="Widget.Material3.Tooltip">
        <item name="android:textAppearance">@style/aqua.rangeSlider.label.appearance</item>
        <item name="backgroundTint">@color/mainBackground</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="aqua.rangeSlider.label.appearance" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">14sp</item>
    </style>

</resources>